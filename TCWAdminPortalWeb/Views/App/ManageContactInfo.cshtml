@{
    ViewBag.Title = "Manage Contact Info";
}

<div class="row">
    <h2>@ViewBag.Title</h2>
    <p>
        Use this screen to manage the contact information that shows up on the home page's Contact page.
    </p>

    <form>
        <div class="form-group">
            <label>Street Address</label>
            <input class="form-control" />
            <label>City</label>
            <input class="form-control" />
            <label>State</label>
            <input class="form-control" />
            <label>Zip</label>
            <input class="form-control" />
            <label>Phone Number</label>
            <input class="form-control" />
            <label>Email</label>
            <input class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-success" />
            <a asp-controller="app" asp-action="index" class="btn btn-default">Cancel</a>
        </div>
    </form>
</div>

