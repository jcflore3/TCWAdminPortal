@model IEnumerable<TCWAdminPortalWeb.ViewModels.FeaturedPropertyViewModel>

@{
    ViewBag.Title = "Featured Properties";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h2>@ViewBag.Title</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>

        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ThumbnailURL)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MLSListingURL)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StreetAddress)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.City)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.State)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Zip)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BedRooms)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FullBaths)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HalfBaths)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Garage)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BuildingSQFeet)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LotSQFeet)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Created)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Enabled)
                        </th>
                        <th></th>
                    </tr>
                </thead>

                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            <img src="@Html.Raw(item.ThumbnailURL)" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MLSListingURL)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StreetAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Zip)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BedRooms)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullBaths)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HalfBaths)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Garage)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BuildingSQFeet)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LotSQFeet)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Created)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Enabled)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
